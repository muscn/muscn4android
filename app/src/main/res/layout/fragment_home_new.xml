<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/whiteColor"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--countdown timer: day,hr, min,sec-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/daysTextView"
                    style="@style/countdown_timer_text_style"
                    android:layout_gravity="center"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/daysLabelTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="@string/days"
                    android:textAllCaps="true"
                    android:textColor="@color/dimPrimaryColor"
                    android:textSize="@dimen/time_label_txt_size"/>
            </LinearLayout>


            <View
                android:layout_width="0.4dp"
                android:layout_height="@dimen/vertical_line_height"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hoursTextView"
                    style="@style/countdown_timer_text_style"
                    android:layout_gravity="center"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/hoursLabelTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="@string/hours"
                    android:textAllCaps="true"
                    android:textColor="@color/dimPrimaryColor"
                    android:textSize="@dimen/time_label_txt_size"/>
            </LinearLayout>


            <View
                android:layout_width="0.4dp"
                android:layout_height="@dimen/vertical_line_height"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/minsTextView"
                    style="@style/countdown_timer_text_style"
                    android:layout_gravity="center"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/minsLabelTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="@string/mins"
                    android:textAllCaps="true"
                    android:textColor="@color/dimPrimaryColor"
                    android:textSize="@dimen/time_label_txt_size"/>
            </LinearLayout>


            <View
                android:layout_width="0.4dp"
                android:layout_height="@dimen/vertical_line_height"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/secsTextView"
                    style="@style/countdown_timer_text_style"
                    android:layout_gravity="center"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/secsLabelTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="@string/secs"
                    android:textAllCaps="true"
                    android:textColor="@color/dimPrimaryColor"
                    android:textSize="@dimen/time_label_txt_size"/>
            </LinearLayout>


        </LinearLayout>

        <!--match between -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/firstTeamNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/home_view_margin_top_large"
                android:gravity="center"
                android:lineSpacingExtra="8dp"
                android:textColor="@color/white"
                android:textSize="@dimen/match_between_txt_size"/>

            <ImageView
                android:id="@+id/firstTeamImageView"
                android:layout_width="@dimen/team_logo_size"
                android:layout_height="@dimen/team_logo_size"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_placeholder_team"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="8dp"
                android:text="vs."
                android:textColor="@color/white"
                android:textSize="@dimen/match_between_txt_size"/>


            <TextView
                android:id="@+id/secondTeamNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="8dp"
                android:textColor="@color/white"
                android:textSize="@dimen/match_between_txt_size"/>
        </LinearLayout>
        <!--competition name/venue/live on-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--competition name-->
            <TextView
                android:id="@+id/competitionNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/home_view_margin_top_large"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/competition_txt_size"/>
            <!--venue-->
            <TextView
                android:id="@+id/competitionVenueTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/competition_txt_size"/>

            <!--live on-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"

                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/liveOnTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="live On"
                    android:textColor="@color/white"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/broadCastChannelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/competition_txt_size"/>
            </LinearLayout>

            <!--<TextView-->
            <!--android:id="@+id/dateTimeTextView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="@dimen/home_view_margin_top_large"-->
            <!--android:gravity="center"-->
            <!--android:lineSpacingExtra="5dp"-->
            <!--android:textAllCaps="true"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="@dimen/competition_txt_size"/>-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dayTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="12"
                    android:lineSpacingExtra="5dp"
                    android:textColor="@color/white"
                    android:textSize="40sp"/>

                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lineSpacingExtra="5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/competition_txt_size"/>

                <TextView
                    android:id="@+id/timeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lineSpacingExtra="5dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/competition_txt_size"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/opponentTeamImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_placeholder_team"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/emptyFixtureLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/fixture_schedule_yet_to_come"
            android:textColor="@color/white"
            android:textSize="14dp"/>
    </LinearLayout>
</LinearLayout>