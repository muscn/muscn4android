<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/matchResultRowLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="0.2">

            <View
                android:id="@+id/matchResultView"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:background="@color/colorDraw" />

        </LinearLayout>

        <TextView
            android:id="@+id/matchResultHomeTeam"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.65"
            android:gravity="left"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/matchResultHomeTeamScore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.15"
            android:gravity="center"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/matchResultAwayTeamScore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="9dp"
            android:layout_weight="0.15"
            android:gravity="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/matchResultAwayTeam"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.65"
            android:gravity="left"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>