<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/matchResultRowLayout"
    android:weightSum="4"
    android:padding="10dp"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


  <LinearLayout
      android:layout_width="0dp"
      android:layout_weight="0.3"
      android:layout_height="match_parent">

      <View
          android:id="@+id/matchResultView"
          android:backgroundTint="#2fad33"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginLeft="6dp"
          />

  </LinearLayout>
    <TextView
        android:gravity="center"
        android:id="@+id/matchResultHomeTeam"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.6"
        android:text="Manchester United"/>
    <TextView
        android:gravity="center"
        android:id="@+id/matchResultHomeTeamScore"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:text="3"/>
    <TextView
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:text="-"/>
    <TextView
        android:gravity="center"
        android:id="@+id/matchResultAwayTeamScore"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:text="2"/>
    <TextView
        android:gravity="center"
        android:id="@+id/matchResultAwayTeam"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.6"
        android:text="Leicester City"/>

</LinearLayout>