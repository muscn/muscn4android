        <TextView
            android:id="@+id/gameVenueTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="15sp" />

        <!--countdown timer: day,hr, min,sec-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/daysValueTextView"
                    style="@style/countdown_timer_text_style"
                    android:layout_gravity="center"
                    android:text=""
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/daysLabelNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="@string/days"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/time_label_txt_size" />
            </LinearLayout>


            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/vertical_divider_line_widget" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hoursValueTextView"
                    style="@style/countdown_timer_text_style"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/hoursLabelNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="@string/hours"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/time_label_txt_size" />
            </LinearLayout>


            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/vertical_divider_line_widget" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/minsValueTextView"
                    style="@style/countdown_timer_text_style"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/minsLabelNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="@string/mins"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/time_label_txt_size" />
            </LinearLayout>


            <ImageView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/vertical_divider_line_widget" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/secsValueTextView"
                    style="@style/countdown_timer_text_style"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/secsLabelNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="@string/secs"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/time_label_txt_size" />
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/horizontal_divider_line_widget" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateTimeValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/dateLiveDividerImageView"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/vertical_divider_line_widget" />

            <TextView
                android:id="@+id/liveTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>