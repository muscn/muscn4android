<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/table_caption_padding"
        android:weightSum="8">

        <TextView
            android:id="@+id/serialNumberCaption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="#"
            android:textColor="@color/white"
            android:textSize="@dimen/header_caption_text_size" />

        <TextView
            android:id="@+id/clubCaption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Club"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/header_caption_text_size" />

        <TextView
            android:id="@+id/pCaption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="P"
            android:textColor="@color/white"
            android:textSize="@dimen/header_caption_text_size" />

        <TextView
            android:id="@+id/gdCaption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GD"
            android:textColor="@color/white"
            android:textSize="@dimen/header_caption_text_size" />

        <TextView
            android:id="@+id/ptsCaption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pts"
            android:textColor="@color/white"
            android:textSize="@dimen/header_caption_text_size" />
    </LinearLayout>
    <!--table row divider white line-->
    <!--<include layout="@layout/white_horizontal_line"/>-->

</LinearLayout>