<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/goals_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/goalsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goals"
        android:textColor="@color/colorDarkGray"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goalFirstTeamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manchester United dsdrw"
                android:textColor="@color/colorDarkGray"
                android:textSize="15sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/firstTeamRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="1dp"
                android:scrollbars="none" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goalSecondTeamName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Southampton"
                android:textColor="@color/colorDarkGray"
                android:textSize="15sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/secondTeamRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="1dp"
                android:scrollbars="none" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>

