<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/matchResultRowLayout">

    <include layout="@layout/white_horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--<View-->
            <!--android:id="@+id/matchResultView"-->
            <!--android:layout_width="10dp"-->
            <!--android:layout_height="10dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:background="@color/colorDraw" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="6dp"
            android:paddingTop="12dp"
            android:weightSum="10">

            <ImageView
                android:id="@+id/eplMatchweekFixtureHomeTeamLogo"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/logo_manutd" />

            <TextView
                android:id="@+id/eplMatchweekHomeTeamScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/eplMatchweekMatchStatus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:textSize="13sp"
                android:text="FullTime"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/eplMatchweekAwayTeamScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/eplMatchweekFixtureAwayTeamLogo"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/logo_manutd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingTop="2dp"
            android:weightSum="10">

            <TextView
                android:id="@+id/eplMatchweekHomeTeamShortName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center"
                android:text="MU"
                android:textSize="16sp"
                android:textColor="@color/white"
                />

            <TextView
                android:textSize="13sp"
                android:id="@+id/eplMatchweekTimeandHomeGround"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7.4"
                android:fontFamily="sans-serif-condensed"

                android:gravity="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/eplMatchweekAwayTeamShortName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center"
                android:text="WBA"
                android:textColor="@color/white"
                android:textSize="16sp"/>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>