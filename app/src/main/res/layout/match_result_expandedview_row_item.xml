<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--view to seprate different events-->
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/white" />-->

    <!--row layout to show the event details-->

    <LinearLayout
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <!--textview to show time for the occured event-->

        <TextView
            android:textSize="11sp"
            android:textColor="@color/white"
            android:id="@+id/expandedViewEventTime"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:text="90+5'"
            android:gravity="center"
            android:layout_height="match_parent" />

        <!--layout to show the events of home team-->
        <LinearLayout
            android:id="@+id/homeTeamExpandedDetailView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical">

            <!--layout to show major event of home team-->

            <LinearLayout
                android:id="@+id/expandedviewHomeTeamEventHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/expandedEventPlayerName"
                    android:layout_width="0dp"
                    android:layout_weight="1.85"
                    android:gravity="center_vertical|right"
                    android:text="Marcus Rashford"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="3dp"
                    android:id="@+id/expandedEventImageview"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/icon_football"
                    android:layout_gravity="center_vertical|left"/>
            </LinearLayout>

            <!--layout to show assist details in case of goal scored event-->

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="horizontal"-->
                <!--android:weightSum="2">-->
                <!--<TextView-->
                    <!--android:id="@+id/expandedEventAssistPlayerName"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_weight="1.8"-->
                    <!--android:gravity="center_vertical|right"-->
                    <!--android:text="Marcus Rashford"-->
                    <!--android:layout_height="match_parent" />-->
                <!--<ImageView-->
                    <!--android:id="@+id/expandedEventAssistImageview"-->
                    <!--android:layout_width="10dp"-->
                    <!--android:layout_height="10dp"-->
                    <!--android:layout_weight="0.2"-->
                    <!--android:src="@drawable/icon_football"-->
                    <!--android:layout_gravity="center_vertical|left"/>-->
            <!--</LinearLayout>-->



        </LinearLayout>

        <!--layout to show score in response to event occured-->

        <LinearLayout
            android:id="@+id/childViewScoreLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.3"
            android:weightSum="3">

            <TextView
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/expandedviewHomeTeamScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"/>
            <TextView
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"/>
            <TextView
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/expandedviewAwayTeamScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"/>

        </LinearLayout>

        <!--layout to show events of away team-->
        <LinearLayout
            android:id="@+id/awayTeamExpandedDetailView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical">

            <!--layout to show major event of away team-->

            <LinearLayout
                android:id="@+id/expandedviewAwayTeamEventHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="3dp"
                    android:id="@+id/expandedEventAwayImageview"
                    android:layout_width="13dp"
                    android:layout_height="10dp"
                    android:src="@drawable/icon_football"
                    android:layout_gravity="center_vertical|left"/>
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/expandedEventAwayPlayerName"
                    android:layout_width="0dp"
                    android:layout_weight="1.85"
                    android:gravity="center_vertical|left"
                    android:text="Jamie Vardy"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!--layout to show assist details in case of goal scored event-->

            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal"-->
            <!--android:weightSum="2">-->
            <!--<TextView-->
            <!--android:id="@+id/expandedEventAssistPlayerName"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="1.8"-->
            <!--android:gravity="center_vertical|right"-->
            <!--android:text="Marcus Rashford"-->
            <!--android:layout_height="match_parent" />-->
