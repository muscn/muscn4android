<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/table_caption_padding"
        android:weightSum="3">

        <TextView
            android:id="@+id/playersCaption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Player"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/injuryCaption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text=" Injury"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/returnDateCaption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Return"
            android:textColor="@color/white" />

    </LinearLayout>
    <!--table row divider white line-->
    <!--<include layout="@layout/white_horizontal_line" />-->

</LinearLayout>